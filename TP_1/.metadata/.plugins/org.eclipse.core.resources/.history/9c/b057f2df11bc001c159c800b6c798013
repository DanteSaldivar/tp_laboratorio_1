#include <stdio.h>
#include <stdlib.h>

int calcularPorReglaSimple (float primerNumero, float segundoNumero, float tercerNumero, float *resultado);

int main(void) {
	float numeroA;
	float numeroB;
	float numeroC;
	float resultado;
	int error;


	numeroA = 10;
	numeroB = 1;
	numeroC = 20;


	 error = calcularPorReglaSimple(numeroA, numeroB, numeroC, &resultado);


	 printf("El resultado es %.2f\n\n",resultado);


	return error;
}

int calcularPorReglaSimple (float primerNumero, float segundoNumero, float tercerNumero, float *resultado)
{
  int retorno;

  retorno = -1;

  if (primerNumero != 0 && resultado != NULL)
  {
    *resultado = (tercerNumero * segundoNumero) / primerNumero;
    retorno = 0;
  }

  return retorno;
}
