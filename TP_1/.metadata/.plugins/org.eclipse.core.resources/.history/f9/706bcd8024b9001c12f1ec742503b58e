#include <stdio.h>
#include <stdlib.h>

int main(void) {
    float precioVuelo=1335000.66;
    float kilometroIngresado=7090;
    float precioDebito;
    float precioCredito;
    float precioBitcoin;
    float precioKilometro;
    int descuento;
    int aumento;
    float bitcoin;
    descuento=10;
    aumento=25;
    bitcoin= 4606954.55;

    precioDebito = precioVuelo-(precioVuelo*descuento)/100;

     precioCredito = (precioVuelo*aumento)/100+precioVuelo;

     precioBitcoin = (bitcoin*100/precioVuelo);

     precioKilometro = precioVuelo / kilometroIngresado;

     printf("%.2f\n%.2f\n%.2f\n%.2f\n",precioDebito,precioCredito,precioBitcoin,precioKilometro);




    return 0;
}
